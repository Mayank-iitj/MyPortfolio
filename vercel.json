{
  "version": 2,
  "routes": [
    // Serve known static files directly (avoid SPA rewrite)
    { "src": "/robots.txt", "dest": "/robots.txt" },
    { "src": "/sitemap.xml", "dest": "/sitemap.xml" },
    { "src": "/CNAME", "dest": "/CNAME" },
    // Asset files served as-is
    { "src": "/(.*)\.(js|css|png|jpg|jpeg|webp|svg|ico|txt|xml)", "dest": "/$1.$2" },
    // SPA fallback: everything else rewrites to index.html
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)\.(js|css|png|jpg|jpeg|webp|svg)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" }
      ]
    }
  ]
}
